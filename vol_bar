#!/bin/bash

 case $BLOCK_BUTTON in
	1) setsid -f "pavucontrol" & ;;
	2) pamixer -t ;;
	4) pamixer -i 5 --allow-boost ;;
#	5) pactl set-sink-volume 15 -5% ;;
	5) pamixer -d 5 --allow-boost ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
 esac

#vol="$(pactl get-sink-volume 1 | rg front-left | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')"

vol=`pamixer --get-volume-human | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,' | sed 's/%//g'`

[ $vol -eq "0" ] && echo ðŸ”‡ && exit

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon$vol%"
